@inherits Umbraco.Web.Mvc.UmbracoViewPage<Blog.Models.ViewModels.PostViewModel>
@{
    ViewBag.SeoTitle = Model.Content.SeoTitle;
    ViewBag.SeoDescription = Model.Content.SeoDescription;
}

@section Header
{
}

<!-- Post -->
<div class="row">

    <div class="span2">
        <p class="postMeta uppercase">@Model.PostDate.ToString("ddd dd MMM yyyy")</p>
    </div>

    <div class="span7">

        <h2>@Model.Title</h2>

        <p class="postMeta">Posted in <a href="@Model.Category.Url">@Model.Category.Name</a></p>
        
        @Html.Raw(Model.BodyContent)
        
        <!--<p class="postMeta">
                Tags: <a href="#">Html</a>, <a href="#">CSS</a>, <a href="#">javascript</a>
            </p>-->

    </div>
</div>
